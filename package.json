{
  "name": "notifier",
  "private": true,
  "version": "0.0.0",
  "description": "A notification service for user-generated events",
  "main": "server/notifier-server.js",
  "scripts": {
    "start": "node server/notifier-server.js",
    "devserver": "nodemon --watch server/notifier-server.js",
    "build": "grunt build:full",
    "hooks": "cp hooks/* .git/hooks/",
    "lint": "eslint Gruntfile.js app server",
    "lint:less": "lesshint app/less -e badges.less",
    "onemessage": "clients/send-notification -p 0 -t test",
    "retract": "clients/send-notification -c -l test",
    "test:server": "mocha --bail --reporter min server/test",
    "test:client": "karma start app/test/karma.conf.js --single-run",
    "coverage:server": "istanbul cover --dir coverage/server _mocha -- -R min server/test",
    "coverage:client": "echo 'Nope. Client coverage is automatically written by test:client'",
    "deploy": "git push openshift production; clients/send-notification -g openshift -t 'Deployment complete'"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lovett/notifier.git"
  },
  "author": "Bill Lovett",
  "homepage": "https://github.com/lovett/notifier",
  "dependencies": {
    "angular": "1.4.8",
    "angular-animate": "1.4.8",
    "angular-resource": "1.4.8",
    "angular-route": "1.4.8",
    "angular-sanitize": "1.4.8",
    "angular-touch": "1.4.8",
    "body-parser": "1.14.1",
    "bunyan": "1.5.1",
    "compression": "1.6.0",
    "express": "4.13.3",
    "fastclick": "1.0.6",
    "faye": "1.1.2",
    "grunt": "0.4.5",
    "grunt-angular-templates": "0.5.7",
    "grunt-appcache": "0.1.8",
    "grunt-autoprefixer": "3.0.3",
    "grunt-cli": "0.1.13",
    "grunt-contrib-clean": "0.7.0",
    "grunt-contrib-copy": "0.8.2",
    "grunt-contrib-less": "1.1.0",
    "grunt-contrib-uglify": "0.11.0",
    "grunt-shell": "1.1.2",
    "grunt-text-replace": "0.4.0",
    "mysql": "2.9.0",
    "nconf": "0.8.2",
    "needle": "0.11.0",
    "normalize.css": "3.0.3",
    "passport": "0.3.2",
    "passport-http": "0.3.0",
    "passport-local": "1.0.0",
    "permessage-deflate": "0.1.4",
    "response-time": "2.3.1",
    "sanitize-html": "1.11.1",
    "sequelize": "3.14.1",
    "sequelize-cli": "2.2.1",
    "serve-favicon": "2.3.0",
    "sqlite3": "3.1.1",
    "touch": "1.0.0",
    "useragent": "2.1.7"
  },
  "devDependencies": {
    "angular-mocks": "1.4.8",
    "chai": "3.4.1",
    "chance": "0.8.0",
    "eslint": "1.10.1",
    "eslint-plugin-mocha": "1.1.0",
    "grunt-contrib-watch": "0.6.1",
    "istanbul": "0.4.1",
    "karma": "0.13.15",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "0.2.1",
    "karma-coverage": "0.5.3",
    "karma-firefox-launcher": "0.1.7",
    "karma-mocha": "0.2.1",
    "karma-ng-html2js-preprocessor": "0.2.0",
    "karma-safari-launcher": "0.1.1",
    "karma-sinon": "1.0.4",
    "lesshint": "1.1.0",
    "mocha": "2.3.4",
    "sinon": "1.17.2",
    "supertest": "1.1.0"
  }
}
