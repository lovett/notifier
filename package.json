{
  "name": "notifier",
  "private": true,
  "version": "0.0.0",
  "description": "A notification service for user-generated events",
  "main": "server/notifier-server.js",
  "scripts": {
    "start": "node server/notifier-server.js",
    "devserver": "NODE_ENV=dev nodemon --watch server/notifier-server.js",
    "build": "npm install --production --no-optional && grunt --no-color build:full",
    "postbuild": "npm run -s build:archive",
    "postinstall": "npm prune",
    "hooks": "cp hooks/* .git/hooks/",
    "onemessage": "clients/send-notification -s $NOTIFIER_DEV -p 0 -t test -e '10 minutes'",
    "retract": "clients/send-notification -c -l test",
    "test:server": "mocha --bail --reporter min server/test",
    "test:client": "karma start app/test/karma.conf.js --single-run",
    "coverage:server": "istanbul cover --dir coverage/server _mocha -- -R min server/test",
    "coverage:client": "echo 'Nope. Client coverage is automatically written by test:client'",
    "deploy": "git push openshift production; clients/send-notification -g openshift -t 'Deployment complete'",
    "resetdb": "rm notifier.sqlite; touch server/notifier-server.js",
    "prelogfetch": "mkdir -p production_logs",
    "logfetch": "npm run logfetch:cron && npm run logfetch:notifier && npm run logfetch:node",
    "logfetch:cron": "rhc scp notifier download production_logs app-root/logs/cron_hourly.log",
    "logfetch:notifier": "rhc scp notifier download production_logs app-root/logs/notifier.log",
    "logfetch:node": "rhc scp notifier download production_logs app-root/logs/nodejs.log",
    "logtail:dev": "tail -f notifier.log",
    "build:archive": "rsync -arv --include-from=rsync.conf --delete --delete-excluded . notifier",
    "postbuild:archive": "tar --create --gzip --file=notifier.tar.gz notifier"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lovett/notifier.git"
  },
  "author": "Bill Lovett",
  "homepage": "https://github.com/lovett/notifier",
  "dependencies": {
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "dateparser": "1.0.6",
    "express": "4.15.2",
    "faye": "1.2.4",
    "morgan": "^1.8.1",
    "nconf": "0.8.4",
    "needle": "1.6.0",
    "passport": "0.3.2",
    "passport-http": "0.3.0",
    "passport-local": "1.0.0",
    "permessage-deflate": "0.1.5",
    "response-time": "2.3.2",
    "sanitize-html": "1.14.1",
    "sequelize": "3.30.4",
    "sequelize-cli": "2.7.0",
    "serve-favicon": "2.4.2",
    "sqlite3": "3.1.8",
    "useragent": "2.1.13"
  },
  "devDependencies": {
    "angular": "1.6.4",
    "angular-animate": "1.6.4",
    "angular-mocks": "1.6.4",
    "angular-resource": "1.6.4",
    "angular-route": "1.6.4",
    "angular-sanitize": "1.6.4",
    "angular-touch": "1.6.4",
    "chai": "3.5.0",
    "chance": "1.0.6",
    "eslint": "3.19.0",
    "eslint-plugin-mocha": "4.9.0",
    "fastclick": "1.0.6",
    "grunt": "1.0.1",
    "grunt-angular-templates": "1.1.0",
    "grunt-appcache": "0.2.0",
    "grunt-autoprefixer": "3.0.4",
    "grunt-cli": "1.2.0",
    "grunt-contrib-clean": "1.1.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-less": "1.4.1",
    "grunt-contrib-uglify": "2.3.0",
    "grunt-contrib-watch": "1.0.0",
    "grunt-shell": "2.1.0",
    "grunt-text-replace": "0.4.0",
    "istanbul": "0.4.5",
    "jsdoc": "^3.4.3",
    "karma": "1.6.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.1",
    "karma-mocha": "1.3.0",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "karma-safari-launcher": "1.0.0",
    "karma-sinon": "1.0.5",
    "lesshint": "3.1.1",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "normalize.css": "6.0.0",
    "sinon": "2.1.0",
    "supertest": "3.0.0"
  }
}
