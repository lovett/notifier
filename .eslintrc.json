{
  "extends": "eslint:recommended",
  "rules": {
    "arrow-spacing": 2,
    "default-case": 1,
    "eol-last": [2, "always"],
    "global-require": 2,
    "guard-for-in": 1,
    "indent": [2, 4],
    "linebreak-style": [2, "unix"],
    "newline-after-var": 2,
    "newline-before-return": 2,
    "no-confusing-arrow": 2,
    "no-inline-comments": 2,
    "no-invalid-this": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-multi-spaces": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-var": 2,
    "no-octal": 2,
    "no-path-concat": 2,
    "no-script-url": 2,
    "no-unused-expressions": 2,
    "no-useless-return": 2,
    "no-void": 2,
    "no-warning-comments": 2,
    "no-with": 2,
    "one-var": [2, "always"],
    "prefer-arrow-callback": 2,
    "quotes": [2, "single"],
    "radix": 2,
    "semi": [2, "always"],
    "sort-vars": 2,
    "strict": [2, "safe"],
    "vars-on-top": 2,
    "wrap-iife": 2,
    "yoda": [2, "never"]
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  }
}
